{
    "root": true,
    "extends": [
        "eslint-config-airbnb",
        "prettier",
        "prettier/react"
    ],
    "parser": "babel-eslint",
    "plugins": ["prettier"],
    "settings": {
        "ecmascript": 6
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "destructuring": true,
        "classes": true,
        "forOf": true,
        "blockBindings": true,
        "arrowFunctions": true
    },
    "env": {
        "browser": true,
        "mocha": true
    },
    "rules": {
        "comma-dangle": 0,
        "func-names": 0,
        "func-style": 0,
        "import/extensions": 0,
        "import/no-extraneous-dependencies": 0,
        "import/no-unresolved": 0,
        "import/prefer-default-export": 0,
        "indent": 2,
        "linebreak-style": 0,
        "no-alert": 0,
        "no-console": 0,
        "no-param-reassign": 0,
        "no-plusplus": 0,
        "no-return-assign": 0,
        "no-underscore-dangle": 0,
        "object-shorthand": 0,
        "prettier/prettier": ["error", {
            "trailingComma": "all",
            "singleQuote": true,
            "printWidth": 100
        }],
        "react/forbid-prop-types": 0,
        "react/jsx-filename-extension": 0,
        "react/no-array-index-key": 0,
        "react/no-children-prop": 0,
        "react/no-unused-prop-types": 0,
        "react/prefer-stateless-function": 0,
        "react/prop-types": 0,
        "react/sort-comp": 0,
        "react/jsx-wrap-multilines": 0,
        "react/no-danger": 0
    },
    "globals": {
        "expect": true,
        "describe": true,
        "it": true,
        "jest": true
    }
}